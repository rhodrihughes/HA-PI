[Unit]
Description=Home Assistant Light Control Touchscreen UI
After=network.target

[Service]
Type=simple
ExecStart=%h/ha-pi/ha_lights /etc/ha_lights.conf
Restart=on-failure
RestartSec=5
User=REPLACE_USER
Group=REPLACE_USER

# Hardware access
SupplementaryGroups=spi gpio

[Install]
WantedBy=multi-user.target
